generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id        Int     @id @default(autoincrement())
  username  String  @db.Text
  password  String  @db.Text
  firstname String? @db.Text
  lastname  String? @db.Text
}

model contributers {
  userid   String    @id
  username String    @db.Text
  avatar   String    @db.Text
  socials  socials[]
  support  support[]
}

enum SocialsType {
  GitHub
  Discord
  PayPal
  Reddit
  TikTok
  X
  eBay
  Crunchyroll
  Xbox
  Facebook
  YouTube
  Steam
  Spotify
  Domain
  Twitch
  EpicGames
  Battlenet
  RiotGames
  LeagueofLegends
  Bungienet
  PlayStationNetwork
}


enum supportType {
  Website_Creater
  Website_Helper
}

model socials {
  userid String
  User   contributers @relation(fields: [userid], references: [userid])

  type  SocialsType
  value String

  @@id([userid, type])
}

model support {
  userid String
  User   contributers @relation(fields: [userid], references: [userid])

  type supportType
  value String

  @@id([userid, type])
}