generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        Int     @id @default(autoincrement())
  username  String
  password  String
  firstname String?
  lastname  String?
}

model contributers {
  userid   String    @id
  username String
  avatar   String
  socials  socials[]
  support  support[]
}

model socials {
  userid String
  type   SocialsType
  value  String
  User   contributers @relation(fields: [userid], references: [userid])

  @@id([userid, type])
}

model support {
  userid String
  type   supportType
  value  String
  User   contributers @relation(fields: [userid], references: [userid])

  @@id([userid, type])
}

model serverLoad {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @db.Timestamp(6)
  cpuLoad   Int
  ramLoad   Int
}

enum SocialsType {
  GitHub
  Discord
  PayPal
  Reddit
  TikTok
  X
  eBay
  Crunchyroll
  Xbox
  Facebook
  YouTube
  Steam
  Spotify
  Domain
  Twitch
  EpicGames
  Battlenet
  RiotGames
  LeagueofLegends
  Bungienet
  PlayStationNetwork
}

enum supportType {
  Website_Creater
  Website_Helper
}
